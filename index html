  </div>  <script>
const jobCategories = [
  {
    category: "IT & Software",
    keywords: ["developer", "software", "cloud", "it", "programmer", "engineer"],
    skills: ["Programming", "Problem Solving", "System Design", "Git"],
    platforms: ["LinkedIn", "Naukri", "Indeed"],
    interview: ["Coding", "Technical concepts", "Project discussion"]
  },
  {
    category: "Education",
    keywords: ["teacher", "lecturer", "professor", "trainer"],
    skills: ["Subject Knowledge", "Communication", "Lesson Planning"],
    platforms: ["School Websites", "College Portals"],
    interview: ["Teaching demo", "Subject expertise"]
  },
  {
    category: "Healthcare",
    keywords: ["doctor", "nurse", "medical", "health"],
    skills: ["Clinical Knowledge", "Patient Care", "Diagnosis"],
    platforms: ["Hospital Careers", "Government Exams"],
    interview: ["Medical scenarios", "Ethics"]
  },
  {
    category: "Engineering",
    keywords: ["civil", "mechanical", "electrical", "aero"],
    skills: ["Core Engineering Knowledge", "Design Tools", "Problem Solving"],
    platforms: ["Naukri", "Government Jobs"],
    interview: ["Technical questions", "Design problems"]
  },
  {
    category: "Business & Finance",
    keywords: ["accountant", "hr", "manager", "finance"],
    skills: ["Communication", "Analysis", "Business Knowledge"],
    platforms: ["LinkedIn", "Indeed"],
    interview: ["Case studies", "HR questions"]
  },
  {
    category: "Creative & Media",
    keywords: ["designer", "editor", "artist", "ui", "ux"],
    skills: ["Creativity", "Design Tools", "Portfolio"],
    platforms: ["Behance", "Fiverr", "LinkedIn"],
    interview: ["Portfolio review", "Creative tasks"]
  }
];

function getAssistance() {
  const input = document.getElementById("jobRole").value.toLowerCase();
  let matchedCategory = null;

  for (let cat of jobCategories) {
    if (cat.keywords.some(k => input.includes(k))) {
      matchedCategory = cat;
      break;
    }
  }

  let output = "";

  if (matchedCategory) {
    output = `
Job Category: ${matchedCategory.category}

Detected Role: ${input}

Recommended Skills:
- ${matchedCategory.skills.join("\n- ")}

Resume Tips:
- Highlight category-specific skills
- Add relevant experience or training

Job Search Platforms:
- ${matchedCategory.platforms.join("\n- ")}

Interview Preparation:
- ${matchedCategory.interview.join("\n- ")}
`;
  } else {
    output = `
Detected Role: ${input}

Recommended Skills:
- Communication
- Adaptability
- Domain Knowledge

Resume Tips:
- Customize resume for role
- Highlight strengths

Job Search Platforms:
- LinkedIn
- Indeed
- Naukri

Interview Preparation:
- HR questions
- Confidence building
`;
  }

  document.getElementById("result").innerText = output;
}
</script></body>
